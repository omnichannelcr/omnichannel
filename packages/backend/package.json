{
  "name": "@omnichannel/backend",
  "version": "1.0.0",
  "description": "Omnichannel backend server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "db:migrate": "knex migrate:latest --knexfile database/knexfile.ts",
    "db:migrate:rollback": "knex migrate:rollback --knexfile database/knexfile.ts",
    "db:seed": "knex seed:run --knexfile database/knexfile.ts",
    "db:reset": "knex migrate:rollback --all --knexfile database/knexfile.ts && knex migrate:latest --knexfile database/knexfile.ts && knex seed:run --knexfile database/knexfile.ts",
    "docker:build": "docker build -t omnichannel-backend .",
    "docker:run": "docker run -p 3001:3001 omnichannel-backend",
    "docker:dev": "docker build -f Dockerfile.dev -t omnichannel-backend-dev . && docker run -p 3001:3001 -v $(pwd):/app -v /app/node_modules omnichannel-backend-dev"
  },
  "keywords": ["nodejs", "express", "typescript", "backend"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "pg": "^8.11.3",
    "knex": "^3.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.2",
    "tsx": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
